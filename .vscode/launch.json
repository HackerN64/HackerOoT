    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ares GDB (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/HackerOoT.elf",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerServerAddress": "tcp:172.20.176.1:9123", // change this to your Linux/WSL IP address
        },
